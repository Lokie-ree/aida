{
  "name": "pelican-ai",
  "description": "Pelican AI - Navigate AI with Confidence. Platform-agnostic guidance that works with ANY AI tool you already use, designed specifically for Louisiana educators.",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "build": "vite build",
    "lint": "tsc -p convex -noEmit --pretty false && tsc -p . -noEmit --pretty false && convex dev --once && vite build",
    "test:beta-auth": "node scripts/test-runner.js",
    "test:unit": "node scripts/test-runner.js --suite unit",
    "test:integration": "node scripts/test-runner.js --suite integration",
    "test:e2e": "node scripts/test-runner.js --suite e2e",
    "test:api": "node scripts/test-runner.js --suite api",
    "test:diagnostic": "node scripts/test-runner.js --suite diagnostic",
    "test:cleanup": "node scripts/test-runner.js --cleanup",
    "test:unit:beta-signup": "node scripts/unit/test-unit-beta-signup.js",
    "test:unit:user-profiles": "node scripts/unit/test-unit-user-profiles.js",
    "test:unit:beta-program": "node scripts/unit/test-unit-beta-program.js",
    "test:unit:auth": "node scripts/unit/test-unit-auth.js",
    "test:integration:signup-flow": "node scripts/integration/test-integration-signup-flow.js",
    "test:integration:auth-init": "node scripts/integration/test-integration-auth-initialization.js",
    "test:e2e:automated": "node scripts/e2e/test-e2e-beta-flow.js",
    "test:api:better-auth": "node scripts/api/test-api-better-auth.js",
    "test:diagnostic:env": "node scripts/diagnostic/test-environment-config.js",
    "test:diagnostic:db": "node scripts/diagnostic/test-database-state.js"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.43",
    "@convex-dev/better-auth": "^0.9.5",
    "@convex-dev/rag": "^0.5.3",
    "@convex-dev/resend": "^0.1.13",
    "@mendable/firecrawl-js": "^1.29.3",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-email/components": "^0.5.6",
    "@react-email/render": "^1.3.2",
    "@vapi-ai/web": "^2.4.0",
    "better-auth": "^1.3.27",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.27.5",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "openai": "^5.23.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "@types/node": "^22.18.8",
    "@types/react": "^19.2.1",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^4.7.0",
    "dotenv": "^16.6.1",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "postcss": "~8.5.6",
    "prettier": "^3.6.2",
    "shadcn": "^3.4.0",
    "tailwindcss": "~4.1.14",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^6.3.6"
  }
}
